{
  "name": "mostly-dom",
  "description": "A virtual-dom designed for the future",
  "version": "0.0.0",
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "main": "lib/commonjs",
  "module": "lib.es2015/index.js",
  "jsnext:main": "lib.es2015/index.js",
  "typings": "lib/index.d.ts",
  "bugs": {
    "url": "https://github.com/TylorS/mostly-dom/issues"
  },
  "config": {
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    }
  },
  "devDependencies": {
    "@motorcycle/tslint": "^1.3.0",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "commitizen": "^2.9.0",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^1.3.2",
    "jsdom": "^9.9.1",
    "jsdom-global": "^2.1.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sauce-launcher": "^1.1.0",
    "karma-typescript": "^2.1.5",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "ts-node": "^2.0.0",
    "tslint": "^4.1.1",
    "typescript": "^2.1.4",
    "validate-commit-msg": "^2.8.2",
    "wallabify": "0.0.14"
  },
  "homepage": "https://github.com/TylorS/mostly-dom#readme",
  "keywords": [
    "dom",
    "fast",
    "modular",
    "reconciliation",
    "virtual",
    "virtual-dom"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TylorS/mostly-dom.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:es2015 && npm run build:commonjs",
    "build:commonjs": "tsc -P .config/tsconfig.commonjs.json",
    "build:es2015": "tsc -P .config/tsconfig.es2015.json",
    "changelog": "conventional-changelog --infile CHANGELOG.md --same-file --release-count 0 --preset angular",
    "clean": "rimraf lib lib.es2015",
    "commit": "git-cz",
    "postchangelog": "git add CHANGELOG.md && git commit -m 'docs(CHANGELOG): append to changelog'",
    "postversion": "npm run changelog && git push origin master --tags && npm publish",
    "preversion": "npm run build",
    "release:major": "npm version major -m 'chore(package): v%s'",
    "release:minor": "npm version minor -m 'chore(package): v%s'",
    "test": "npm run test:lint && npm run test:unit && npm run test:browser",
    "test:browser": "karma start",
    "test:debug": "node --inspect --debug-brk ./node_modules/.bin/mocha -r ts-node/register -r jsdom-global-register src/*.test.ts src/**/*.test.ts",
    "test:lint": "tslint src/**/**/*.ts src/**/*.ts src/*.ts",
    "test:sauce-labs": "SAUCE=true karma start",
    "test:unit": "UNIT=true karma start"
  }
}
